# SmartBike Backend Environment Variables
# Copy this file to .env and adjust values.

# --- Flask ---
FLASK_PORT=5000
LOG_LEVEL=INFO
PUBLISH_INTERVAL_SEC=15

# --- MQTT ---
MQTT_BROKER_HOST=your_mqtt_broker_hostname
MQTT_PORT=8883
MQTT_USERNAME=your_username
MQTT_PASSWORD=your_password
MQTT_PUBLISH_TOPIC=bike/data/1
MQTT_SUBSCRIBE_TOPIC=bike/commands/1

# --- TPMS ---
TPMS_SENSOR_ID=12345

# (Optional) override sensor interface device paths
# GPS_SERIAL_PORT=/dev/ttyAMA1
